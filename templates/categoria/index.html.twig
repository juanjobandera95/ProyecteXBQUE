{% extends 'base.html.twig' %}

{% block title %}Categoria index{% endblock %}

{% block body %}
    <h1>Categoria index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCategoria</th>
                <th>Nomcategoria</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorium in categorias %}
            <tr>
                <td>{{ categorium.idCategoria }}</td>
                <td>{{ categorium.nomcategoria }}</td>
                <td>
                    <a href="{{ path('categoria_show', {'idCategoria': categorium.idCategoria}) }}">show</a>
