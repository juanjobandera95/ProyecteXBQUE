<form method="post" action="{{ path('categoria_delete', {'idCategoria': categorium.idCategoria}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorium.idCategoria) }}">
    <button class="btn">Delete</button>
</form>
