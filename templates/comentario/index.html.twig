{% extends 'base.html.twig' %}

{% block title %}Comentario index{% endblock %}

{% block body %}
    <h1>Comentario index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NewId</th>
                <th>Content</th>
                <th>DatePublic</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comentario in comentarios %}
            <tr>
                <td>{{ comentario.newId }}</td>
                <td>{{ comentario.content }}</td>
                <td>{{ comentario.datePublic ? comentario.datePublic|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('comentario_show', {'idComentario': comentario.idComentario}) }}">show</a>
                    <a href="{{ path('comentario_edit', {'idComentario': comentario.idComentario}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comentario_new') }}">Create new</a>
{% endblock %}
