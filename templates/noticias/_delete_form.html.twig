<form method="post" action="{{ path('noticias_delete', {'idNews': noticia.idNews}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ noticia.idNews) }}">
    <button class="btn">Delete</button>
</form>
